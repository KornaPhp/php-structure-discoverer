{
    "name": "spatie/laravel-structure-discoverer",
    "description": "Automatically discover classes within your Laravel app",
    "keywords": [
        "LaravelAutoDiscoverer",
        "laravel",
        "laravel-structure-discoverer"
    ],
    "homepage": "https://github.com/spatie/structure-discoverer",
    "license": "MIT",
    "authors": [
        {
            "name": "Ruben Van Assche",
            "email": "ruben@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "amphp/parallel": "^1.4",
        "amphp/parallel-functions": "^1.1",
        "illuminate/collections": "^8.69.0|^9.0",
        "spatie/async": "^1.5",
        "spatie/laravel-package-tools": "^1.4.3"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.0|^5.3",
        "nunomaduro/larastan": "^2.0|^1.0",
        "orchestra/testbench": "^7.0|^6.15",
        "pestphp/pest": "^1.18",
        "pestphp/pest-plugin-laravel": "^1.1",
        "spatie/invade": "^1.1",
        "spatie/laravel-ray": "^1.30"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\StructureDiscoverer\\": "src",
            "Spatie\\StructureDiscoverer\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\StructureDiscoverer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage",
        "analyse": "./vendor/bin/phpstan analyse",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\StructureDiscoverer\\StructureDiscovererServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
